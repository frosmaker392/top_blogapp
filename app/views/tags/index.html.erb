<h1>List of all tags</h1>

<ul>
    <% @tags.each do |tag| %>
        <li><%= link_to tag.name, tag_path(tag) %>
        <% if logged_in? %>
        <%= link_to "Delete", tag_path(tag), method: :delete, data: { confirm: "Are you sure you want to delete this tag?" } %>
        <% end %>
        </li>
    <% end %>
</ul>

<p><%= link_to "Back to articles list", articles_path %>